<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs') %>
  </head>
<body>

  <header>
    <%- include('../partials/navbar.ejs') %>
  </header>

    <main class="mainRegister p-2 m-4">
      <h2 class="text-center">Completá los campos para registrarte en VivirViajando</h2>
        <form class="row g-3 p-4 register" action="/users/register" method="POST" enctype="multipart/form-data">
            <div class="col-md-4">
              <label for="name" class="form-label">Nombre</label>
              <input type="text" name="name" id="name" class="form-control" value="<%= locals.oldData ? oldData.name : '' %>">
              <% if(locals.errors && errors.name) { %> 
                <span class="text-danger" >* <%= errors.name.msg %> </span>
              <% } %>
            </div>
            <div class="col-md-4">
                <label for="lastName" class="form-label">Apellido</label>
                <input type="text" name="lastName" id="lastName" class="form-control" value="<%= locals.oldData ? oldData.lastName : '' %>">
                <% if(locals.errors && errors.lastName) { %> 
                  <span class="text-danger" >* <%= errors.lastName.msg %> </span>
                <% } %>
            </div>
            <div class="col-md-4">
              <label for="yearsOld" class="form-label">Fecha de Nacimiento</label>
              <input type="date" name="yearsOld" id="yearsOld" class="form-control" value="<%= locals.oldData ? oldData.yearsOld : '' %>">
              <% if(locals.errors && errors.yearsOld) { %> 
                <span class="text-danger" >* <%= errors.yearsOld.msg %> </span>
              <% } %>
            </div>
            <div class="col-md-4">
              <label for="document" class="form-label">DNI</label>
              <input type="number" name="document" id="document" class="form-control" value="<%= locals.oldData ? oldData.document : '' %>">
              <% if(locals.errors && errors.document) { %> 
                <span class="text-danger" >* <%= errors.document.msg %> </span>
              <% } %>
            </div>
            <div class="col-md-4">
              <label for="address" class="form-label">Domicilio</label>
              <input type="text" name="address" id="address" class="form-control" value="<%= locals.oldData ? oldData.address : '' %>">
              <% if(locals.errors && errors.address) { %> 
                <span class="text-danger" >* <%= errors.address.msg %> </span>
              <% } %>
            </div>
            <div class="col-md-4">
              <label for="genre" class="form-label">Género</label>
              <select id="genre" name="genre" class="form-select">
                <option disabled <%= !locals.oldData || !oldData.genre ? 'selected' : '' %> >Elegí tu género</option>
                <% genres.forEach(genre => { %>
                  <option value="<%= genre.id %>" <%= locals.oldData && oldData.genre == genre.id ? 'selected' : '' %> ><%= genre.nombre %></option>
                <% }) %>
              </select>
              <% if(locals.errors && errors.genre) { %> 
                <span class="text-danger" >* <%= errors.genre.msg %> </span>
              <% } %>
            </div>
            <div class="col-md-4">
              <label for="state" class="form-label">Provincia</label>
              <select id="state" name="state" class="form-select">
                <option disabled selected >Elegí tu provincia</option>
                <% provinces.forEach(province => { %>
                  <option value="<%= province.nombre %>"><%= province.nombre %></option>
                <% }) %>
              </select>
              <% if(locals.errors && errors.state) { %> 
                <span class="text-danger" >* <%= errors.state.msg %> </span>
              <% } %>
            </div>
            <div class="col-md-4">
              <label for="city" class="form-label">Ciudad</label>
              <select id="city" name="city" class="form-select">
                <option selected disabled>Elegí tu ciudad</option>
                <% if(locals.errors && errors.city) { %> 
                  <span class="text-danger" >* <%= errors.city.msg %> </span>
                <% } %>
              </select>
            </div>
            <div class="col-md-4 mb-3">
              <label for="perfilPhoto" class="form-label">Foto de Perfil</label>
              <input class="form-control" type="file" name="perfilPhoto" id="perfilPhoto">
              <% if(locals.errors && errors.perfilPhoto) { %> 
                <span class="text-danger" >* <%= errors.perfilPhoto.msg %> </span>
              <% } %>
            </div>
            <div class="mb-3 col-md-12">
              <label for="email" class="form-label">Correo Electrónico</label>
              <input type="email" class="form-control" id="email" name="email" value="<%= locals.oldData ? oldData.email : '' %>">
              <% if(locals.errors && errors.email) { %> 
                <span class="text-danger" >* <%= errors.email.msg %> </span>
              <% } %>
            </div>
            <div class="mb-3 col-md-6">
              <label for="password" class="form-label">Contraseña</label>
              <input type="password" class="form-control" id="password" name="password">
              <% if(locals.errors && errors.password) { %> 
                <span class="text-danger" >* <%= errors.password.msg %> </span>
              <% } %>
            </div>
            <div class="mb-3 col-md-6">
              <label for="passwordConfirm" class="form-label">Confirmar Contraseña</label>
              <input type="password" class="form-control" id="passwordConfirm" name="passwordConfirm">
              <% if(locals.errors && errors.passwordConfirm) { %> 
                <span class="text-danger" >* <%= errors.passwordConfirm.msg %> </span>
              <% } %>
            </div>
            <div class="col-12">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="terminos" id="terminos">
                <label class="form-check-label" for="terminos">
                  Acepto términos y condiciones de privacidad.
                </label>
              </div>
              <% if(locals.errors && errors.terminos) { %> 
                <span class="text-danger" >* <%= errors.terminos.msg %> </span>
              <% } %>
            </div>
            <div class="col-12 text-center">
              <button type="submit" class="btn pe-4 ps-4 btnLogin"><i class="bi bi-check2-square"></i> Registrarme</button>
              <a href="/" class="btn pe-4 ps-4 btnLogin" ><i class="bi bi-x-circle"></i> Cancelar</a>
            </div>
          </form>
    </main>

    <footer class="pt-2">
      <%- include('../partials/footer.ejs') %>
    </footer>
  
  
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
    <script src="/js/register_editUserCity.js"></script>

</body>
</html>