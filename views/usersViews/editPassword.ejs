<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs') %>
  </head>
  <body class="hidden">

    <div class="centrado">
      <div class="lds-spinner">
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
      </div>
    </div>
    
  <header>
    <%- include('../partials/navbar.ejs') %>
  </header>

  <%- include('../partials/search.ejs') %>

    <main class="login container p-4 mt-4 mb-4">
        <form action="/users/editPassword/<%= user.id %>?_method=PUT" method="POST">
            <div class="mb-3 col-md-12">
                <label for="password" class="form-label">Contraseña Actual</label>
                <input type="password" class="form-control" id="password" name="password">
                <% if(locals.errors && errors.password) { %> 
                  <span class="text-danger" >* <%= errors.password.msg %> </span>
                <% } %>
            </div>
            <div class="mb-3 col-md-12">
                <label for="passwordNew" class="form-label">Contraseña Nueva</label>
                <input type="password" class="form-control" id="passwordNew" name="passwordNew">
                <% if(locals.errors && errors.passwordNew) { %> 
                  <span class="text-danger" >* <%= errors.passwordNew.msg %> </span>
                <% } %>
            </div>
            <div class="mb-3 col-md-12">
                <label for="passwordNewConfirm" class="form-label">Confirmar Contraseña Nueva</label>
                <input type="password" class="form-control" id="passwordNewConfirm" name="passwordNewConfirm">
                <% if(locals.errors && errors.passwordNewConfirm) { %> 
                  <span class="text-danger" >* <%= errors.passwordNewConfirm.msg %> </span>
                <% } %>
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btnLogin me-2"><i class="bi bi-box-arrow-in-right"></i> Confirmar</button>
                <a type="submit" href="/users/profile" class="btn btnLogin pe-4 ps-4 btnCancelEditPassword"><i class="bi bi-x-circle"></i> Cancelar</a>
            </div>
          </form>
    </main>

    <footer class="pt-2">
      <%- include('../partials/footer.ejs') %>
    </footer>
  
  
    <%- include('../partials/scripts.ejs') %>
    <script src="/js/cart.js"></script>
    <script src="/js/alert.js"></script>
    
  

</body>
</html>