<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs') %>
  </head>
  <body class="hidden">

    <div class="centrado">
      <div class="lds-spinner">
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
      </div>
    </div>
    
  <header>
    <%- include('../partials/navbar.ejs') %>
  </header>

  <%- include('../partials/search.ejs') %>

    <main class="mainRegister p-2 m-4">
      <h2 class="text-center">Modificá los campos a editar</h2>
        <form class="row g-3 p-4 register" action="/products/edit/<%= productEdit.id %>?_method=PUT" method="POST" enctype="multipart/form-data" >
            <div class="col-md-6">
              <label for="name" class="form-label">Nombre</label>
              <input type="text" name="name" id="name" class="form-control" id="inputEmail4" value="<%= productEdit.nombre %>">
              <% if(locals.errors && errors.name) { %> 
                <span class="text-danger" >* <%= errors.name.msg %> </span>
              <% } %>
            </div>
            <div class="col-md-6">
                <label for="category" class="form-label">Categoría</label>
                <select id="category" name="category" class="form-select">
                    <option disabled>Elegí la categoria</option>
                    <% categorys.forEach(category => { %> 
                      <option value="<%= category.id %>" <%= productEdit.id_categoria == category.id ? 'selected' : '' %> > <%= category.nombre %> </option>
                    <% }) %>
                  </select>
                  <% if(locals.errors && errors.category) { %> 
                    <span class="text-danger" >* <%= errors.category.msg %> </span>
                  <% } %>
            </div>
            <div class="form-floating">
                <textarea class="form-control" id="info" name="info"> <%= productEdit.info %> </textarea>
                <label for="info">Información</label>
                <% if(locals.errors && errors.info) { %> 
                  <span class="text-danger" >* <%= errors.info.msg %> </span>
                <% } %>
            </div>
            <div class="col-md-4">
              <label for="service" class="form-label">Servicio</label>
              <input type="text" name="service" id="service" class="form-control" value="<%= productEdit.servicio %>">
              <% if(locals.errors && errors.service) { %> 
                <span class="text-danger" >* <%= errors.service.msg %> </span>
              <% } %>
            </div>
            <div class="col-md-4">
              <label for="price" class="form-label">Precio</label>
              <input type="decimal" name="price" id="price" class="form-control" value="<%= productEdit.precio %>">
              <% if(locals.errors && errors.price) { %> 
                <span class="text-danger" >* <%= errors.price.msg %> </span>
              <% } %>
            </div>
            <div class="col-md-4">
              <label for="pay" class="form-label">Medios de Pago</label>
              <select id="pay" name="pay" class="form-select">
                <option disabled>Elegí el medio de pago</option>
                <% pays.forEach(pay => { %> 
                  <option value="<%= pay.id %>" <%= productEdit.id_mediosPagos == pay.id ? 'selected' : '' %> ><%= pay.descripcion %></option>
                <% }) %>
              </select>
            </div>
            <div class="d-flex flex-column flex-md-row align-items-center">
              <div class="col-md-6">
                  <label for="image" class="form-label">Imágen</label>
                  <input class="form-control" type="file" name="image" id="image">
                  <% if(locals.errors && errors.image) { %> 
                    <span class="text-danger" >* <%= errors.image.msg %> </span>
                  <% } %>
              </div>
              <div class="col-md-6 mt-3">
                <img class= 'w-100 h-50 imgForm' src="<%= productEdit.imagen %>" alt="<%= productEdit.nombre %>">
              </div>
            </div>
            <div class="form-floating">
                <textarea class="form-control" id="description" name="description" style="height: 100px"> <%= productEdit.descripcion %> </textarea>
                <label for="description">Descripción</label>
                <% if(locals.errors && errors.description) { %> 
                  <span class="text-danger" >* <%= errors.description.msg %> </span>
                <% } %>
              </div>
            <div class="col-12 text-center">
              <button type="submit" class="btn btn-primary pe-4 ps-4 btnLogin"><i class="bi bi-check2-square"></i> Editar Producto</button>
              <a href="/" class="btn btn-primary pe-4 ps-4 btnLogin"><i class="bi bi-x-circle"></i> Cancelar</a>
            </div>
          </form>
    </main>

    <footer class="pt-2">
      <%- include('../partials/footer.ejs') %>
    </footer>
  
  
    <%- include('../partials/scripts.ejs') %>

</body>
</html>